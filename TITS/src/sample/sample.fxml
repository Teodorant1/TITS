<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="699.0" prefWidth="977.0">
         <children>
            <TextField fx:id="FileLocation" layoutX="27.0" layoutY="591.0" prefHeight="78.0" prefWidth="787.0" text="Write/Copy paste the location of the folder you want to upload to the server. Use \\ instead of \ for the file location" />
            <Button fx:id="BatchUpload" layoutX="488.0" layoutY="451.0" minWidth="50.0" mnemonicParsing="false" onAction="#uploadcards" prefHeight="70.0" prefWidth="440.0" text="Batch Upload" />
          <Button fx:id="downloaderOfCards" layoutX="34.0" layoutY="443.0" mnemonicParsing="false" onAction="#handleAction" prefHeight="25.0" prefWidth="393.0" text="Setup  Decks" />
            <TextArea fx:id="Creator" layoutX="27.0" layoutY="541.0" prefHeight="37.0" prefWidth="787.0" text="Type in the name of the card creator" />
            <Label fx:id="cardfinal" alignment="CENTER" layoutX="28.0" layoutY="8.0" prefHeight="430.0" prefWidth="907.0" text="Press &quot;Setup Decks&quot; to shuffle the decks " textAlignment="JUSTIFY" wrapText="true">
               <font>
                  <Font size="32.0" />
               </font></Label>
            <TextArea fx:id="Destination" layoutX="27.0" layoutY="476.0" prefHeight="45.0" prefWidth="386.0" text="Type s or q depending if you are uploading a situation or a question" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
